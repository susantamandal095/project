  selectAll(value) {

    if (value) {
      if (this.maydata) {
        for (let i of this.maydata) {
          if (i.recobj.isVisibleRecord) {

            i.isChecked = true;
            this.listttttttttttt.push(i.id)


          }
        }
      }
    }
    else {
      if (this.maydata) {
        for (let i of this.maydata) {
          i.isChecked = false;
          this.listttttttttttt.pop(i.id)
        }
      }
    }

  }
  unSelect(id) {

    if (this.maydata) {
      let index = 0;
      let count: number = 0
      for (let i of this.maydata) {
        if (i.id == id) {
          i.isChecked = false;
          this.listttttttttttt.pop(i.id)


        }
        if (i.isChecked) {
          count++;
        }
        index++;
      }
      if (count <= 0) {
        this.listttttttttttt = [];
      }
    }

  }
  unSelectAll() {
    this.listttttttttttt = [];
    this.selectedAll = false;
    if (this.maydata) {
      for (let i of this.maydata) {

        i.isChecked = false;


      }
    }
  }
  selectFilter(value, id, index) {
    if (value) {

      if (this.maydata[index].recobj.isVisibleRecord) {
        this.maydata[index].isChecked = true;
        this.listttttttttttt.push(id)
      }
    }
    else {
      this.maydata[index].isChecked = false;
      this.listttttttttttt.pop(id);
    }
    this.checkIfAllSelected();
  }

  checkIfAllSelected() {
    this.selectedAll = this.maydata.every(function (item: any) {
      return item.isChecked == true;
    })
  }



  <input type="checkbox" class="data_table_checkbox" id="s_no {{j}}" [(ngModel)]="i.isChecked"
                            *ngIf="i.recobj.isVisibleRecord && is_Valid_Action('Delete')"
                            (change)="selectFilter($event.target.checked,i.id,j+(rowsPerPage*activePage-rowsPerPage));">
                          <label for="s_no {{j}}">{{j+1+(rowsPerPage*activePage-rowsPerPage)}}</label>

                          <th class="action_tdfirst_sticky fixed_th"  [ngStyle]="{'background-color':companyThemeBlockColor,'color':CompanyThemetextColor}">
                        <input type="checkbox" *ngIf="is_Valid_Action('Delete')" class="data_table_checkbox"
                          [(ngModel)]="selectedAll" (change)="selectAll($event.target.checked);">
                        S. No.
                      </th>